<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve File"
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/urlView"
        android:layout_centerHorizontal="true"
        android:onClick="retrieveFile"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/urlView"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Adress"
        android:inputType="textWebEditText"
        android:text="http://trustsmart.cloud.tilaa.com/JSON_File.txt" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp">



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout0"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:padding="5dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_row="0"
            android:layout_column="0">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:id="@+id/gridLayout"
                android:layout_below="@+id/button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Naam: "
                    android:id="@+id/textView2"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/firstNameView"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:hint="John"
                    android:freezesText="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Achternaam: "
                    android:id="@+id/textView3"
                    android:layout_row="1"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/lastNameView"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:hint="Doe"
                    android:freezesText="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Leeftijd:"
                    android:id="@+id/textView4"
                    android:layout_row="2"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/ageView"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:hint="18"
                    android:freezesText="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="3"
                    android:layout_column="2" />

            </GridLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2"
            android:layout_row="1"
            android:layout_column="0">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/gridLayout1"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Adres: "
                    android:id="@+id/textView10"
                    android:layout_row="0"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/streetView"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:hint="44 3rd street, New York, AB, 10002"
                    android:freezesText="true" />
            </GridLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView3"
            android:layout_row="2"
            android:layout_column="0">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridLayout1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/gridLayout2"
                android:focusableInTouchMode="false"
                android:visibility="visible">

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="0"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Telefoonnummer: "
                    android:id="@+id/textView7"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="1"
                    android:layout_column="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/phoneView"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:hint="000 111-2345"
                    android:freezesText="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Fax: "
                    android:id="@+id/textView11"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="3"
                    android:layout_column="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/faxView"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:hint="666 777-8901"
                    android:freezesText="true" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="3"
                    android:layout_column="0" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="3"
                    android:layout_column="0" />

                <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_row="4"
                    android:layout_column="0" />

            </GridLayout>

        </HorizontalScrollView>

    </GridLayout>
    </ScrollView>


</RelativeLayout>
